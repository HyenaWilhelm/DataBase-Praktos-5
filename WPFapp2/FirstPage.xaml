<Page x:Class="WPFapp2.FirstPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFapp2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FirstPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="Войти" Grid.Column="1" Grid.Row="3" Height="55" Width="150" Click="Button_Click"/>
        <TextBox x:Name="PasswordCheck" TextWrapping="Wrap" Text="Введите пароль" Grid.Column="1" Grid.Row="1" Height="50" FontSize="20" VerticalAlignment="Center"/>
        <TextBox x:Name="LoginCheck" TextWrapping="Wrap" Text="Введите логин" Grid.Column="1" Grid.Row="0"  Height="50" VerticalAlignment="Bottom" FontSize="20"/>
        <TextBlock x:Name="LogFail" TextWrapping="Wrap" Text="" Grid.Row="1" Grid.Column="1" Height="50" VerticalAlignment="Top" FontSize="15" Margin="0,116,0,0" Grid.RowSpan="2"/>
    </Grid>
</Page>
